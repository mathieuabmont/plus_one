
<div class="container" style="margin-top: 80px;">
  <div class="row">

    <div class="col-md-4 col-md-offset-4">
      <div class="card-booking" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('<%= cl_image_path @booking.prestation.user.picture, height: 300, width: 400, crop: :fill %>');">
        <div class="card-description">
          <h2><%= @booking.prestation.user.first_name %></h2>
          <p><b><%= @booking.prestation.job %></b></p>
          <p id="prestation_price"><%= @booking.prestation.price %> €</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card-status">
        <p>Waiting for an answer</p>
        <% if policy(@booking).destroy? %>
          <%= link_to "Delete", booking_path(@booking),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>

  </div>

  <hr>

  <h3> All your bookings </h3>

  <div class="cards-container">
    <div class="row">
      <div class="card" id="card-index">
        <% @bookings.each do |booking| %>
          <div class="col-xs-12 col-sm-3">
            <div class="card-booking" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('<%= cl_image_path booking.prestation.user.picture, height: 300, width: 400, crop: :fill %>');">
              <div class="card-description">
                <h2><%= booking.prestation.user.first_name %></h2>
                <p><b><%= booking.prestation.job %></b></p>
                <p id="prestation_price"><%= booking.prestation.price %> €</p>
              </div>
              <%= link_to '', booking_path(booking), class:'card-link' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

