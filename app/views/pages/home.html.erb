<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),
url(<%= image_path 'cover_2.jpg' %>);">
  <div class="banner-content">
    <h1> Plus one </h1>
    <div class="text-banner">
      <p> Sick of third weeling? </p>
      <p> We have the person of your dreams! </p>
    </div>
      <%= link_to "Looking for a Plus one",prestations_path, :class => "btn-plusone_large"  %>
      <%= link_to "Become a Plus one ", new_prestation_path, :class => "btn-plusone_large" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @prestations.each do |prestation| %>
      <div class="col-xs-12 col-sm-3">
      <%= render 'shared/card', prestation: prestation %>
      </div>
    <% end %>
  </div>
</div>
<div class="banner_press_logo">
  <%= image_tag "logo_bbc.png", class: 'press_logo' %>
  <%= image_tag "logo_hn.jpg", class: 'press_logo' %>
  <%= image_tag "logo_gh.png", class: 'press_logo' %>
  <%= image_tag "logo_fd.png", class: 'press_logo' %>
</div>
