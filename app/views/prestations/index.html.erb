<div class="container">
  <div class="row">

    <% @prestations.each do |prestation| %>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url('https://cdn.dribbble.com/users/58309/screenshots/2177613/aa_bar_dribbble.jpg');">
          <div class="card-category"></div>
          <div class="card-description">
            <h2><%= prestation.name %></h2>
            <p></p>
          </div>

          <%= link_to '', prestation_path(prestation), class:'card-link' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
