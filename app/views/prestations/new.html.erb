    <div class="content">
      <div class="row">
        <h2>Offer your services</h2>
        <div class="col-xs-12">
          <div class="card-form">
            <% if current_user %>
              <%= simple_form_for @prestation do |f| %>
                <%= f.input :price, placeholder: "150 â‚¬" %>
                <%= f.input :description, placeholder: "Describe yourself" %>
